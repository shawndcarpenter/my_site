<%= render partial: '/adopt/shared/header' %>
<div class="adopt-body" >  
  <%= form_with url: path, method: method, local: true, data: {turbo: false} do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :breed %>
    <%= f.text_field :breed %>

    <%= f.label :adoptable %>
    <%= f.check_box :adoptable %>

    <%= f.label :age %>
    <%= f.number_field :age %>

    <%= f.submit %>
  <% end %>
</div>