<%= render partial: 'viewparty/shared/header' %>
<h1><%= @viewer.name %>'s Movie Results</h1>

<%= button_to "Discover Top Rated Movies", viewparty_viewer_results_path(@viewer), method: :get %><br>

<%= form_with url: viewparty_viewer_results_path(@viewer), method: :get, local: :true do |f| %>
<%= f.text_field :query %>
<%= f.submit "Search by Movie Title" %>
<% end %>