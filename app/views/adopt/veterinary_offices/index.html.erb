<%= render partial: '/adopt/shared/header' %>
<div class="adopt-header" >
  <h1>All Veterinary Offices</h1>
</div>

<%= link_to "Sort by number of veterinarians",
  'veterinary_offices?sort=veterinarian_count' %>

<% @veterinary_offices.each do |office| %>
  <div class="adopt-body" >
    <div id="veterinary-office-<%= office.id %>">
      <h3><%= office.name %></h3>
      <p>Created at: <%= office.created_at %></p>
      <%= link_to "Update #{office.name}", "/adopt/veterinary_offices/#{office.id}/edit" %>
      <%= link_to "Delete #{office.name}", "/adopt/veterinary_offices/#{office.id}", method: :delete %>
    </div>
  </div>
<% end %>
