<%= render partial: '/adopt/shared/header' %>
<div class="adopt-header" >
<h1><%= @veterinarian.name %></h1>
</div>

<div class="adopt-body" >
  <h3>
    <% if @veterinarian.on_call %>
      On call
    <% else %>
      Not on call
    <% end %>
  </h3>
  <h3>Rating: <%= @veterinarian.review_rating %></h3>
  <h3>Practice: <%= @veterinarian.office_name %></h3>

  <%= link_to "Update #{@veterinarian.name}", "veterinarians/#{@veterinarian.id}/edit" %>
  <%= link_to "Delete #{@veterinarian.name}", "/adopt/veterinarians/#{@veterinarian.id}", method: :delete %>
</div>
