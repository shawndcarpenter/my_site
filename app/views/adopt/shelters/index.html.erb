<%= render partial: '/adopt/shared/header' %>
<div class="adopt-header" >
  <h1>All Shelters</h1>
  <%= render partial: 'adopt/shared/search', locals: { path: "/adopt/shelters" } %>
</div>

<%= link_to "Sort by number of pets", "/adopt/shelters?sort=pet_count" %>

<% @shelters.each do |shelter| %>
  <div class="adopt-body" >
    <div id="shelter-<%= shelter.id %>">
      <h3><%= shelter.name %></h3>
      <p>Created at: <%= shelter.created_at %></p>
      <%= link_to "Update #{shelter.name}", "/adopt/shelters/#{shelter.id}/edit" %>
      <%= link_to "Delete #{shelter.name}", "/adopt/shelters/#{shelter.id}", method: :delete %>
    </div>
  </div>
<% end %>
