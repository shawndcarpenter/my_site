<%= render partial: '/adopt/shared/header' %>
<div class="adopt-header" >
  <h1><%= @shelter.name %></h1>
  <p>Rank: <%= @shelter.rank %></p>
  <p>City: <%= @shelter.city %></p>
</div>

<div class="adopt-body" >
  <p class="pet-count">Pets at <%= @shelter.name %>: <%= @shelter.pet_count %></p>
  <p><%= link_to "All pets at #{@shelter.name}", "/adopt/shelters/#{@shelter.id}/pets" %></p>
  <p><%= link_to "Delete #{@shelter.name}", "/adopt/shelters/#{@shelter.id}", method: :delete %></p>
</div>